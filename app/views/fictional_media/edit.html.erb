<h1> Edit Fictional Medium </h1>

<%= form_for @medium, url: @medium do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :context %>
    <%= f.text_field :context %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>
  <%= f.submit "Save" %>
<% end %>
