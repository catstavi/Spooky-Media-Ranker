<table>
  <tr>
    <th> Ranking </th>
    <th> Name </th>
    <th> Upvote </th>
  </tr>

  <% @all_sorted.each do |medium| %>
    <tr>
      <td>
        <%= medium.rank %>
      </td>
      <td>
        <%= medium.name %>
      </td>
      <td>
        <%= button_to "Upvote", hm_upvote_path(medium.id), method: :patch %>
      </td>
    </tr>
  <% end %>

</table>

<%= button_to "View all Mediums", root_path, method: :get %>
<%= button_to "Add a Historical Medium", new_historical_medium_path, method: :get %>
